<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击背景-->
    <item android:state_pressed="true">
        <shape>
            <!--色值-->
            <solid android:color="#E4e4e4"/>
            <corners
                android:radius="@dimen/custom_button_corners"/><!-- 设置圆角半径 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <!--默认背景-->
    <item>
        <shape>
            <solid android:color="#EEEEEE"/>
            <corners android:radius="@dimen/custom_button_corners"/><!-- 设置圆角半径 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#E4e4e4"/>
            <corners
                android:radius="@dimen/custom_button_corners"/><!-- 设置圆角半径 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/colorPrimary"/>
        </shape>
    </item>
</selector>