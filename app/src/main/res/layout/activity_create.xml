<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.aspire.daydreaming.bundle.myActivity.createActivity.CreateActivity">    <include        layout="@layout/include_appbar"        android:layout_width="match_parent"        android:layout_height="wrap_content"/>    <EditText        android:id="@+id/et_content"        android:layout_width="match_parent"        android:layout_height="150dp"        android:ems="10"        android:gravity="top|left"        android:hint="写点什么呢..."        android:inputType="textMultiLine"        android:scrollHorizontally="false"        android:background="@null"        android:padding="4dp"/>    <android.support.v7.widget.RecyclerView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:id="@+id/rv_img"/></LinearLayout>